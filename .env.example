# ===========================================
# SprintFlow Environment Configuration
# ===========================================

# Database Configuration
MONGO_URI=mongodb://localhost:27017/sprintflow
MONGO_DB=sprintflow
MONGO_USER=admin
MONGO_PASS=password
MONGO_HOST=localhost

# Application Security
APP_SECRET=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE=1h
REFRESH_TOKEN_EXPIRE=7d

# Frontend Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8005/api

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@sprintflow.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Admin Configuration
ADMIN_PORT=8081

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Production Configuration (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=info
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/sprintflow
# APP_SECRET=your-production-secret-key
# NEXT_PUBLIC_BASE_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://your-domain.com/api
